{
  "name": "Barstar Backend",
  "image": "mcr.microsoft.com/devcontainers/python:3.11-bookworm",
  "runArgs": [
    "--network=host"
  ],
  "mounts": [
    "source=barstar-backend-pip,target=/home/vscode/.cache/pip,type=volume",
    "source=barstar-backend-uv,target=/home/vscode/.cache/uv,type=volume"
  ],
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11",
      "installJupyterlab": false
    },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "forwardPorts": [
    8000,
    5432,
    6379
  ],
  "postCreateCommand": "${containerWorkspaceFolder}/.devcontainer/postCreate.sh",
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "${containerWorkspaceFolder}/.venv/bin/python",
        "editor.formatOnSave": true,
        "python.analysis.typeCheckingMode": "strict",
        "files.eol": "\n"
      },
      "extensions": [
        "donjayamanne.python-extension-pack",
        "ms-azuretools.vscode-docker",
        "ms-python.black-formatter",
        "openai.chatgpt",
        "Trunk.io",
        "ms-python.isort",
        "noorashuvo.simple-coding-time-tracker"
      ]
    }
  }
}